<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.example.recruitdemo.XiaoHui.XApprovalDetailsActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="@color/white"
           android:orientation="horizontal"
           android:gravity="center_vertical">

           <ImageView
               android:id="@+id/sFinish"
               android:layout_width="20dp"
               android:layout_height="match_parent"
               android:layout_marginLeft="15dp"
               android:src="@mipmap/back"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:text="审批单"
               android:layout_marginLeft="8dp"
               android:gravity="center_vertical"
               android:textColor="#000000"
               android:textSize="17sp"
               />
       </LinearLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#D0D0D0"/>
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">



               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="#FFFF">

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/tx"
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:background="@drawable/img50_blue"
                           android:layout_marginLeft="15dp"
                           android:layout_marginTop="18dp"
                           android:text="刘永宝"
                           android:textSize="15sp"
                           android:textColor="#FFFF"
                           android:gravity="center"/>

                       <TextView
                           android:id="@+id/name"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignTop="@id/tx"
                           android:layout_toRightOf="@id/tx"
                           android:text="刘永宝"
                           android:textSize="16sp"
                           android:textColor="#000000"
                           android:layout_marginLeft="8dp"
                           android:layout_marginTop="6dp"/>

                       <TextView
                           android:id="@+id/tv1sp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/name"
                           android:layout_toRightOf="@id/tx"
                           android:text="等待我审批"
                           android:textSize="14sp"
                           android:textColor="#ED9121"
                           android:layout_marginLeft="8dp"
                           android:layout_marginTop="6dp"/>
                   </RelativeLayout>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="#D0D0D0"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:layout_marginTop="14dp"/>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginLeft="14dp"
                       android:layout_marginTop="10dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="审批编号:"
                           android:textColor="#A0A0A0"
                           />

                       <TextView
                           android:id="@+id/id"
                           android:text="11111"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="#000000"/>
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginLeft="14dp"
                       android:layout_marginTop="6dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="所在部门:"
                           android:textColor="#A0A0A0"
                           />

                       <TextView
                           android:id="@+id/org_name"
                           android:text="2222"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="#000000"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginLeft="14dp"
                       android:layout_marginTop="6dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="创建时间:"
                           android:textColor="#A0A0A0"
                           />

                       <TextView
                           android:id="@+id/time"
                           android:text="33333"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="#000000"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:layout_marginLeft="14dp"
                       android:layout_marginTop="6dp">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="审批详情:"
                           android:textColor="#A0A0A0"
                           />

                       <TextView
                           android:text="由"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="#000000"/>

                       <TextView
                           android:id="@+id/details"
                           android:text="由"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/red"
                           />

                       <TextView
                           android:text="改变为"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="#000000"/>

                       <TextView
                           android:id="@+id/details1"
                           android:text="由"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textColor="@color/red"
                           />
                   </LinearLayout>


                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#000000"
                       android:layout_marginLeft="14dp"/>


                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="#D0D0D0"/>

               </LinearLayout>


               <com.example.recruitdemo.CustomWidget.ListViewForScrollView
                   android:id="@+id/lv"
                   android:layout_width="match_parent"
                   android:divider="@null"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="10dp">
               </com.example.recruitdemo.CustomWidget.ListViewForScrollView>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="50dp" />
           </LinearLayout>
       </ScrollView>

   </LinearLayout>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#FFFF">

        <RelativeLayout
            android:id="@+id/agree"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#D0D0D0"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zhuanjiao"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">



            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#D0D0D0"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/jujue"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拒绝"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#D0D0D0"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D0D0D0"
        android:layout_above="@id/ll"/>
</RelativeLayout>
