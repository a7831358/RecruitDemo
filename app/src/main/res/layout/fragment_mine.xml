<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#FFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/img_er"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="168dp"
                    android:src="@mipmap/erweima"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/sousuo"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/add"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/kuang">

                <TextView
                    android:id="@+id/mLogin"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:text="马上登陆"
                    android:background="#A0A0A0"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="#FFFF"
                    />

                <TextView
                    android:id="@+id/avatar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:textColor="#FFFF"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/shangchuan"/>

                <TextView
                    android:id="@+id/tv_bm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未加入部门"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="100dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/bumen"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="70dp"
                    />


            </RelativeLayout>

            <Button
                android:id="@+id/btn_xiu"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:background="#E8E8E8"
                android:text="修改密码"

                android:layout_height="40dp" />

            <Button
                android:id="@+id/btn_tui"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="退出登录"
                android:textSize="17sp"
                android:textColor="#FFFF"
                android:background="@drawable/btn_tui"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
