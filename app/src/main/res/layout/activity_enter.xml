<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.recruitdemo.EnterActivity"
    android:background="#f5f5f5"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:background="#FFFF"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/eFinish"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/back"
                    android:layout_marginLeft="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:text="学生信息录入 "
                    android:gravity="center_vertical"/>

                <Button
                    android:id="@+id/btn_bj"
                    android:layout_width="48dp"
                    android:layout_height="28dp"
                    android:text="提交"
                    android:textSize="15sp"
                    android:textColor="#FFFF"
                    android:background="@drawable/button"
                    android:layout_marginLeft="140dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:text="  学生信息"
                android:background="#e0e0e0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/l1">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="姓名"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="未填写"
                            android:textSize="16sp"
                            android:gravity="right"
                            android:id="@+id/tvs1" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/l2">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="性别"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="未填写"
                            android:textSize="16sp"
                            android:gravity="right"
                            android:shadowDx="200"
                            android:id="@+id/tvs2" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/l3">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="身份证"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="未填写"
                            android:textSize="16sp"
                            android:gravity="right"
                            android:shadowDx="200"
                            android:id="@+id/tvs3" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/l6">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="联系方式"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="未填写"
                            android:textSize="16sp"
                            android:gravity="right"
                            android:id="@+id/tvs6" />
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:text="  家庭详情"
                android:background="#e0e0e0"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/l4">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="行政区划"
                            android:gravity="center_vertical"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="未填写"
                            android:textSize="16sp"
                            android:gravity="right"
                            android:id="@+id/tvs4" />



                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/l7">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="家庭住址"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="未填写"
                            android:textSize="16sp"
                            android:gravity="right"
                            android:id="@+id/tvs7" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"/>

                    <LinearLayout
                        android:id="@+id/l8"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="家长姓名"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tvs8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="未填写"
                            android:textSize="16sp"
                            android:gravity="right"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/l5">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="与学生关系"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="未填写"
                            android:textSize="16sp"
                            android:gravity="right"
                            android:id="@+id/tvs5" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"/>

                    <LinearLayout
                        android:id="@+id/l9"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="联系方式"
                            android:gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/tvs9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="未填写"
                            android:textSize="16sp"
                            android:gravity="right"
                            />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D0D0D0"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFF">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp">
                    </LinearLayout>
                </LinearLayout>
              
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:text="  学生背景详情"
                    android:background="#e0e0e0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D0D0D0"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="#FFFF">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <LinearLayout
                            android:id="@+id/l12"

                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="详细概况"
                                android:gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/tvs12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="未填写"
                                android:textSize="16sp"
                                android:gravity="right"
                                />



                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#D0D0D0"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
