<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.recruitdemo.SiNong.SStudentEditActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#FFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sFinish"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="学生信息编辑"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_bcx"
                    android:layout_width="48dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/button"
                    android:text="保存"
                    android:textColor="#FFFF"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#e0e0e0"
                android:gravity="center_vertical"
                android:text="  个人信息"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/mL1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="姓名"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="请输入"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0" />


                    <LinearLayout
                        android:id="@+id/mL2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="性别"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_sex"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:shadowDx="200"
                            android:text="请选择"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0" />


                    <LinearLayout
                        android:id="@+id/mL3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="身份证号"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_id"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="请输入"
                            android:textSize="16sp" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0" />

                    <LinearLayout
                        android:id="@+id/mL4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="联系方式"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_contact"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="请输入"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0" />

                    <LinearLayout
                        android:id="@+id/mL5"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="行政区划"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_zone_id"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="请输入"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFF"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D0D0D0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#e0e0e0"
                    android:gravity="center_vertical"
                    android:text="  家庭信息"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D0D0D0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/mL6"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="家庭住址"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="请输入"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#D0D0D0" />

                        <LinearLayout
                            android:id="@+id/mL7"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="紧急联系人"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_relative"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="未设置"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#D0D0D0" />

                        <LinearLayout
                            android:id="@+id/mL8"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="与学生关系"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_relation"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="未设置"
                                android:textSize="16sp" />

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#D0D0D0" />

                        <LinearLayout
                            android:id="@+id/mL9"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="与学生关系"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_relative_contact"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="未设置"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D0D0D0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#e0e0e0"
                    android:gravity="center_vertical"
                    android:text="  学生背景详情"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D0D0D0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="#FFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/mL10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text="详细概况"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/tv_notes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="请输入"
                                android:textSize="16sp" />

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#D0D0D0" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
